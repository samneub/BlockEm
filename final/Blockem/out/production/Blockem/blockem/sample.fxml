<AnchorPane fx:controller="blockem.Controller" xmlns:fx="http://javafx.com/fxml">

    <FlowPane prefHeight="800" prefWidth="200" orientation="vertical" fx:id="playersView"
              alignment="CENTER_RIGHT" prefWrapLength="200"  columnHalignment="CENTER">
        <padding>
            <Insets top="-350" left="450"/>
        </padding>

        <Label text="Player1: 89" fx:id="playerOneScore">
            <graphic>
                <ImageView id="playerOneAvatar" fitHeight="50" fitWidth="50">
                    <Image url="@res/cow.png"/>
                </ImageView>
            </graphic>
        </Label>

        <Label text="Player2: 89" fx:id="playerTwoScore">
            <graphic>
                <ImageView id="playerTwoAvatar" fitHeight="50" fitWidth="50">
                    <Image url="@res/sloth.png"/>
                </ImageView>
            </graphic>
        </Label>

        <Label text="Player3: 89" fx:id="playerThreeScore">
            <graphic>
                <ImageView id="playerThreeAvatar" fitHeight="50" fitWidth="50">
                    <Image url="@res/moose.png"/>
                </ImageView>
            </graphic>
        </Label>

        <Label text="Player4: 89" fx:id="playerFourScore">
            <graphic>
                <ImageView id="playerFourAvatar" fitHeight="50" fitWidth="50">
                    <Image url="@res/penguin.png"/>
                </ImageView>
            </graphic>
        </Label>

    </FlowPane>

    <GridPane alignment="TOP_LEFT" fx:id="pieceView" gridLinesVisible="true">
        <padding><Insets top="475" left="25" bottom="25"/></padding>
    </GridPane>

    <GridPane alignment="TOP_LEFT" gridLinesVisible="true" fx:id="grid">

        <padding><Insets
                top="25" right="25" bottom="50" left="25"/></padding>

    </GridPane>

    <Button fx:id="finished" text="Finished!" onAction="#checkValidPiece"
            AnchorPane.topAnchor="380" AnchorPane.leftAnchor=" 450"/>



</AnchorPane>


