<AnchorPane fx:controller="pong.Controller" xmlns:fx="http://javafx.com/fxml">
    <FlowPane prefHeight="800" prefWidth="200" orientation="vertical" alignment="TOP_RIGHT" prefWrapLength="200"
              columnHalignment="CENTER">
        <padding>
            <Insets top="20" left="440"/>
        </padding>
        <ImageView id="playerOneAvatar" fitHeight="50.0" fitWidth="40">
            <image>
                <Image url="@res/green.jpg"/>
            </image>
        </ImageView>

        <ImageView id="playerTwoAvatar" fitHeight="50.0" fitWidth="40">
            <image>
                <Image url="@res/purple.jpg"/>
            </image>
        </ImageView>

        <ImageView id="playerThreeAvatar" fitHeight="50.0" fitWidth="40">
            <image>
                <Image url="@res/red.jpg"/>
            </image>
        </ImageView>

        <ImageView id="playerFourAvatar" fitHeight="50.0" fitWidth="40">
            <image>
                <Image url="@res/blue.jpg"/>
            </image>
        </ImageView>


    </FlowPane>
    <GridPane alignment="TOP_LEFT" gridLinesVisible="true" fx:id="grid">

        <padding>
            <Insets top="25" right="25" bottom="50" left="25"/>
        </padding>

    </GridPane>

    <Button fx:id="finished" text="Finished!" onAction="#checkValidPiece"
            AnchorPane.topAnchor="450" AnchorPane.leftAnchor=" 450"/>

    <GridPane alignment="TOP_RIGHT" fx:id="playersView">


        <padding>
            <Insets top="20" left="420"/>
        </padding>
    </GridPane>

    <GridPane alignment="TOP_LEFT" fx:id="pieceView">


        <padding>
            <Insets top="800" left="25" bottom="25"/>
        </padding>
    </GridPane>


</AnchorPane>


